{

  "name": "Pomodoro",
  "version": "0.1.0",
  "permissions": ["<all_urls>", "activeTab" ,"notifications", "tabs", "storage"],
  "browser_action": {
    "default_popup": "home.html",
    "default_icon" : {
      "16": "tomato.png",
      "32": "tomato.png",
      "48": "tomato.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["script.js"]

    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent" : false
  },
  "icons": {
    "16": "tomato.png",
    "32": "tomato.png",
    "48": "tomato.png"
  },

  "manifest_version": 2
}